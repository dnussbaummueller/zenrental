<%= simple_form_for [yoga_studio, booking], data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :checkin_date, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
  <%= f.input :checkout_date, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
  <%= f.input :yoga_studio_id, as: :hidden, input_html: { value: @yoga_studio.id } %>
  <%= f.submit class: "btn btn-flat", value: "Confirm Booking" %>
<% end %>
